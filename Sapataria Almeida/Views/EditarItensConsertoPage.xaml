<?xml version="1.0" encoding="utf-8"?>
<Page  
    x:Class="Sapataria_Almeida.Views.EditarItensConsertoPage"  
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:Sapataria_Almeida.Views"
    xmlns:vm="using:Sapataria_Almeida.ViewModels"
    xmlns:models="using:Sapataria_Almeida.Models"
    xmlns:converters="using:Sapataria_Almeida.Converters"
    mc:Ignorable="d">

   <Page.DataContext>  
       <vm:EditarItensConsertoViewModel/>  
   </Page.DataContext>
    <NavigationView
 PaneDisplayMode="Left"
 IsBackButtonVisible="Collapsed"
 IsSettingsVisible="False"
 SelectionChanged="NavView_SelectionChanged">

        <!-- Menu Lateral -->
        <NavigationView.MenuItems>
            <!-- Use SymbolIcon ou FontIcon, não strings -->
            <NavigationViewItem Tag="Index">
                <NavigationViewItem.Icon>
                    <SymbolIcon Symbol="PostUpdate" />
                </NavigationViewItem.Icon>
                Inicio
            </NavigationViewItem>

            <NavigationViewItemSeparator/>

            <NavigationViewItem Tag="CadastrarVenda">
                <NavigationViewItem.Icon>
                    <SymbolIcon Symbol="PostUpdate" />
                </NavigationViewItem.Icon>
                Cadastrar Venda
            </NavigationViewItem>

            <NavigationViewItem Tag="CadastrarConserto">
                <NavigationViewItem.Icon>
                    <SymbolIcon Symbol="Repair" />
                </NavigationViewItem.Icon>
                Cadastrar Conserto
            </NavigationViewItem>

            <NavigationViewItemSeparator/>

            <NavigationViewItem Tag="ConsertosAbertos">
                <NavigationViewItem.Icon>
                    <SymbolIcon Symbol="Clock" />
                </NavigationViewItem.Icon>
                Consertos em aberto
            </NavigationViewItem>

            <NavigationViewItem Tag="ConsertosFinalizados">
                <NavigationViewItem.Icon>
                    <SymbolIcon Symbol="Accept" />
                </NavigationViewItem.Icon>
                Consertos finalizados
            </NavigationViewItem>

            <NavigationViewItem Tag="ConsertosRetirados">
                <NavigationViewItem.Icon>
                    <SymbolIcon Symbol="Send" />
                </NavigationViewItem.Icon>
                Consertos retirados
            </NavigationViewItem>

            <NavigationViewItemSeparator/>

            <NavigationViewItem Tag="DashboardMenu">
                <NavigationViewItem.Icon>
                    <SymbolIcon Symbol="FourBars" />
                </NavigationViewItem.Icon>
                Dashboard
            </NavigationViewItem>
        </NavigationView.MenuItems>

        <!-- Conteúdo Principal -->
        <NavigationView.Content>
            <Grid Padding="20" RowSpacing="20">  
       <Grid.RowDefinitions>  
           <RowDefinition Height="Auto"/>  
           <RowDefinition Height="*"/>  
           <RowDefinition Height="Auto"/>  
       </Grid.RowDefinitions>  

       <!-- Campo para informar ID da O.S. -->  
       <StackPanel Orientation="Horizontal" Spacing="10">  
           <TextBlock Text="ID Conserto:" VerticalAlignment="Center"/>  
           <TextBox Width="100"  
                    Text="{x:Bind ViewModel.ConsertoId, Mode=TwoWay}"/>  
           <Button Content="Carregar Itens"  
                   Command="{x:Bind ViewModel.LoadItensCommand}"/>  
       </StackPanel>  

       <!-- Lista de Itens -->  
       <ListView Grid.Row="1"  
                 ItemsSource="{x:Bind ViewModel.Itens}"  
                 SelectedItem="{x:Bind ViewModel.ItemSelecionado, Mode=TwoWay}"  
                 Height="300">  
           <ListView.ItemTemplate>  
               <DataTemplate x:DataType="models:ItemConserto">  
                   <StackPanel Orientation="Horizontal" Spacing="20">  
                       <TextBlock Text="{x:Bind TipoConserto}" Width="150"/>  
                       <TextBlock Text="{x:Bind Valor}" Width="80"/>  
                       <TextBlock Text="{x:Bind Descricao}" Width="200"/>  
                   </StackPanel>  
               </DataTemplate>  
           </ListView.ItemTemplate>  
       </ListView>  

       <!-- Edição de Descrição -->  
       <StackPanel Grid.Row="2" Orientation="Horizontal" Spacing="10" Margin="0,20,0,0">  
           <TextBlock Text="Nova Descrição:" VerticalAlignment="Center"/>  
           <TextBox Width="200"  
                    Text="{x:Bind ViewModel.NovaDescricao, Mode=TwoWay}"/>  
           <Button Content="Salvar"  
                   Command="{x:Bind ViewModel.SaveDescricaoCommand}"  
                   IsEnabled="{x:Bind ViewModel.SaveDescricaoCommand.IsRunning, Converter={StaticResource InverseBooleanConverter}}"/>  
       </StackPanel>  
   </Grid>

        </NavigationView.Content>

    </NavigationView>
</Page>