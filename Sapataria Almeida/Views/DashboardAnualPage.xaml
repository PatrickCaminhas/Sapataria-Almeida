<Page
    x:Class="Sapataria_Almeida.Views.DashboardAnualPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Sapataria_Almeida.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:lvc="using:LiveChartsCore.SkiaSharpView.WinUI"
    xmlns:viewmodels="using:Sapataria_Almeida.ViewModels"
    mc:Ignorable="d">

    <Page.DataContext>
        <viewmodels:GraficosAnuaisViewModel/>
    </Page.DataContext>
    <NavigationView
 PaneDisplayMode="Left"
 IsBackButtonVisible="Collapsed"
 IsSettingsVisible="False"
 SelectionChanged="NavView_SelectionChanged">

        <!-- Menu Lateral -->
        <NavigationView.MenuItems>
            <!-- Use SymbolIcon ou FontIcon, não strings -->
            <NavigationViewItem Tag="Index">
                <NavigationViewItem.Icon>
                    <SymbolIcon Symbol="PostUpdate" />
                </NavigationViewItem.Icon>
                Inicio
            </NavigationViewItem>

            <NavigationViewItemSeparator/>

            <NavigationViewItem Tag="CadastrarVenda">
                <NavigationViewItem.Icon>
                    <SymbolIcon Symbol="PostUpdate" />
                </NavigationViewItem.Icon>
                Cadastrar Venda
            </NavigationViewItem>

            <NavigationViewItem Tag="CadastrarConserto">
                <NavigationViewItem.Icon>
                    <SymbolIcon Symbol="Repair" />
                </NavigationViewItem.Icon>
                Cadastrar Conserto
            </NavigationViewItem>

            <NavigationViewItemSeparator/>

            <NavigationViewItem Tag="ConsertosAbertos">
                <NavigationViewItem.Icon>
                    <SymbolIcon Symbol="Clock" />
                </NavigationViewItem.Icon>
                Consertos em aberto
            </NavigationViewItem>

            <NavigationViewItem Tag="ConsertosFinalizados">
                <NavigationViewItem.Icon>
                    <SymbolIcon Symbol="Accept" />
                </NavigationViewItem.Icon>
                Consertos finalizados
            </NavigationViewItem>

            <NavigationViewItem Tag="ConsertosRetirados">
                <NavigationViewItem.Icon>
                    <SymbolIcon Symbol="Send" />
                </NavigationViewItem.Icon>
                Consertos retirados
            </NavigationViewItem>

            <NavigationViewItemSeparator/>

            <NavigationViewItem Tag="DashboardMenu">
                <NavigationViewItem.Icon>
                    <SymbolIcon Symbol="FourBars" />
                </NavigationViewItem.Icon>
                Dashboard
            </NavigationViewItem>
        </NavigationView.MenuItems>

        <!-- Conteúdo Principal -->
        <NavigationView.Content>
            <Grid Margin="20" RowSpacing="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button  
           Click="VoltarParaMainPage"  
           HorizontalAlignment="Left"  
           Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal" Spacing="5">
                <SymbolIcon Symbol="Undo" Style="{Binding Foreground,
            RelativeSource={RelativeSource Mode=TemplatedParent}}"/>
                <TextBlock Text="Voltar" VerticalAlignment="Center" Style="{Binding Foreground,
            RelativeSource={RelativeSource Mode=TemplatedParent}}"/>
            </StackPanel>
        </Button>

        <Grid Grid.Row="1" Background="{StaticResource ButtonBackground}" CornerRadius="10">
            <TextBlock Text="Arrecadação da semana" 
                FontSize="18" 
                FontWeight="Bold" 
                Foreground="{StaticResource AppBackgroundBrush}"
                Margin="10,0,0,10"
                HorizontalAlignment="Center"/>
            <lvc:CartesianChart 
                Series="{Binding AnnualSeries}"
                XAxes="{Binding AnnualXAxes}"
                YAxes="{Binding AnnualYAxes}"
                LegendPosition="Hidden"
                Foreground="{StaticResource AppBackgroundBrush}">
            </lvc:CartesianChart> 
          
        </Grid>
        <Grid Grid.Row="2" ColumnSpacing="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <!-- Métodos de Pagamento: Conserto -->
            <Grid Grid.Column="0" Background="{StaticResource ButtonBackground}" CornerRadius="10" Margin="0,10,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="Métodos de Pagamento - Conserto" FontSize="18" FontWeight="Bold" Margin="10" Foreground="{StaticResource AppBackgroundBrush}"/>
                <lvc:CartesianChart Grid.Row="1" Series="{Binding AnnualConsertoPaymentSeries}" XAxes="{Binding AnnualConsertoPaymentXAxes}" LegendPosition="Top"/>
            </Grid>

            <!-- Métodos de Pagamento: Venda -->
            <Grid Grid.Column="1" Background="{StaticResource ButtonBackground}" CornerRadius="10" Margin="0,10,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="Métodos de Pagamento - Venda" FontSize="18" FontWeight="Bold" Margin="10" Foreground="{StaticResource AppBackgroundBrush}"/>
                <lvc:PieChart Grid.Row="1" Series="{Binding AnnualVendaPaymentSeries}" LegendPosition="Right"/>
            </Grid>

            <!-- Métodos de Pagamento: Geral -->
            <Grid Grid.Column="2" Background="{StaticResource ButtonBackground}" CornerRadius="10" Margin="0,10,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="Métodos de Pagamento - Geral" FontSize="18" FontWeight="Bold" Margin="10" Foreground="{StaticResource AppBackgroundBrush}"/>
                <lvc:PieChart Grid.Row="1" Series="{Binding AnnualAllPaymentSeries}" LegendPosition="Right"/>
            </Grid>
        </Grid>
    </Grid>

        </NavigationView.Content>

    </NavigationView>
</Page>