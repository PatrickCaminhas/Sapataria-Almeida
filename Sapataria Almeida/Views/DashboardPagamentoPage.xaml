<Page
    x:Class="Sapataria_Almeida.Views.DashboardPagamentoPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Sapataria_Almeida.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:lvc="using:LiveChartsCore.SkiaSharpView.WinUI"
    xmlns:viewmodels="using:Sapataria_Almeida.ViewModels"
    mc:Ignorable="d">

    <Page.DataContext>
        <viewmodels:DashboardPagamentoViewModel />
    </Page.DataContext>

    <Grid Margin="20" RowSpacing="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button  
           Click="VoltarParaMainPage"  
           HorizontalAlignment="Left"  
           Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal" Spacing="5">
                <SymbolIcon Symbol="Undo" Style="{Binding Foreground,
            RelativeSource={RelativeSource Mode=TemplatedParent}}"/>
                <TextBlock Text="Voltar" VerticalAlignment="Center" Style="{Binding Foreground,
            RelativeSource={RelativeSource Mode=TemplatedParent}}"/>
            </StackPanel>
        </Button>
        <Grid Grid.Row="1" ColumnSpacing="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <!-- Métodos de Pagamento: Conserto -->
            <Grid Grid.Column="0" Background="{StaticResource ButtonBackground}" CornerRadius="10" Margin="0,10,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="Métodos de Pagamento - Conserto" FontSize="18" FontWeight="Bold" Margin="10" Foreground="{StaticResource AppBackgroundBrush}"/>
                <lvc:CartesianChart Grid.Row="1" Series="{Binding ConsertoPaymentSeries}" XAxes="{Binding ConsertoPaymentXAxes}" LegendPosition="Top"/>
            </Grid>

            <!-- Métodos de Pagamento: Venda -->
            <Grid Grid.Column="1" Background="{StaticResource ButtonBackground}" CornerRadius="10" Margin="0,10,0,0">
                <TextBlock Text="Métodos de Pagamento - Venda" FontSize="18" FontWeight="Bold" Margin="10" Foreground="{StaticResource AppBackgroundBrush}"/>
                <lvc:PieChart Series="{Binding VendaPaymentSeries}" LegendPosition="Right"/>
            </Grid>

            <!-- Métodos de Pagamento: Geral -->
            <Grid Grid.Column="2" Background="{StaticResource ButtonBackground}" CornerRadius="10" Margin="0,10,0,0">
                <TextBlock Text="Métodos de Pagamento - Geral" FontSize="18" FontWeight="Bold" Margin="10" Foreground="{StaticResource AppBackgroundBrush}"/>
                <lvc:PieChart Series="{Binding AllPaymentSeries}" LegendPosition="Right"/>
            </Grid>
        </Grid>

    </Grid>
</Page>